<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#26AE90"
    tools:context=".ActivityCapitulos">

    <android.support.v7.widget.Toolbar
        android:id="@+id/capitulos_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#059830"
        android:elevation="4dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/capitulos_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/AppFragmentTheme"/>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|end"
            android:onClick="novoCapitulo"
            android:src="@drawable/fab_adicionar"/>

    </FrameLayout>

</LinearLayout>
