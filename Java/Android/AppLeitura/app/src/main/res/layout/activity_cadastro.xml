<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.antonio.appleitura.FormularioCadastro"
    android:background="#26AE90"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/cadastro_layout_foco"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:background="#FFB73C"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cadastro_txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_red_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/login_livro"
            android:layout_gravity="center"
            android:contentDescription="@string/imagem_app" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/livroform_txtAsterisco"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

            <EditText
                android:id="@+id/cadastro_edtxt_usuario"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:hint="@string/login_edtxt_hint_usuario"
                android:textSize="20sp"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:longClickable="false"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/livroform_txtAsterisco"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

            <EditText
                android:id="@+id/cadastro_edtxt_nome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:hint="@string/cadastro_edtxt_nome"
                android:textSize="20sp"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:longClickable="false"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/livroform_txtAsterisco"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

            <EditText
                android:id="@+id/cadastro_edtxt_senha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:hint="@string/login_edtxt_hint_senha"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:longClickable="false"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/livroform_txtAsterisco"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

            <EditText
                android:id="@+id/cadastro_edtxt_confirmar_senha"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:hint="@string/cadastro_edtxt_confirme_senha"
                android:textSize="20sp"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:longClickable="false"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:onClick="setDataDeNascimento">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/livroform_txtAsterisco"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@android:color/holo_red_light"/>

            <EditText
                android:id="@+id/cadastro_edtxt_data_Nascimento"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:hint="@string/cadastro_edtxt_data_nascimento"
                android:textSize="20sp"
                android:onClick="setDataDeNascimento"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:longClickable="false"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="@dimen/livroform_distance_views"
            android:layout_marginEnd="26dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="3dp"
                android:text="@string/cadastro_btn_cancelar"
                android:backgroundTint="#D6D7D7"
                android:textColor="#26AE90"
                android:onClick="cancelar"/>

            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/cadastro_btn_finalizar"
                android:layout_marginStart="3dp"
                android:backgroundTint="#D6D7D7"
                android:textColor="#26AE90"
                android:onClick="cadastrar"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
